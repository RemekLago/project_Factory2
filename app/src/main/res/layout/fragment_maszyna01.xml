            </RadioGroup>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_zatwierdz_maszyna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Zatwierdź zmiany"
        android:background = "@drawable/roundedbuttonzatwierdz"
        android:theme="@style/Theme.ButtonGreen"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1" />

</androidx.constraintlayout.widget.ConstraintLayout>