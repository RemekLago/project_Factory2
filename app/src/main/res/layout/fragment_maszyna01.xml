                    android:text="TAK" />

                <RadioButton
                    android:id="@+id/checkBox_operator_nie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="NIE" />
            </RadioGroup>
        </TableRow>

